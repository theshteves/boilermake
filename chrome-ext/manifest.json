{
  "manifest_version": 2,

  "name": "boilermake-extension",
  "description": "Bogdan's Web",
  "version": "0.1",
  "icons": {"19": "img/icon.png", "38": "img/icon.png", "512": "img/icon.png"},
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "boilermake-extension",
    "default_popup": "html/index.html"
  },
  "permissions": [
    "tabs",
    "http://webroast.club/*",
    "https://webroast.club/*"
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "commands": {
    // Add keyboard shortcuts here
  }
}
